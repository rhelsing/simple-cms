<% @page_title = "Users" %>

<div class="users index">
  <h2>Users</h2>

  <%= link_to("Add New User", {:action => 'new'}, :class => 'action new') %>

  <div><%= pluralize(@users.size, 'user') %> found</div>
  <table class="listing" summary="User list">
    <tr class="header">
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= user.name %></td>
      <td><%= user.username%></td>
      <td><%= user.email %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'destroy', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
